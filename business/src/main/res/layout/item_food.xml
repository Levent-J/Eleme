<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/color_text_white"
        app:cardElevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_food_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:background="@color/color_primary"/>

            <TextView
                android:id="@+id/tv_food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_food_avatar"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/iv_food_avatar"
                android:text="name"
                android:textColor="@color/color_text_black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_food_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_food_name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_food_avatar"
                android:maxLines="2"
                android:text="简介"
                android:textColor="@color/color_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_food_sales"
                android:layout_alignBottom="@+id/tv_food_sales"
                android:layout_alignEnd="@+id/tv_food_desc"
                android:text="$1.0"
                android:textColor="@color/color_red"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_food_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_food_avatar"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_food_avatar"
                android:text="销量:100"
                android:textColor="@color/color_text_black"
                android:textSize="16sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>