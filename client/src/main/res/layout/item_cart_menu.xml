<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/color_text_white"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_cart_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="名字"
        android:textColor="@color/color_text_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_cart_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_cart_food_name"
        android:layout_alignTop="@+id/tv_cart_food_name"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/view_cart_food_count"
        android:gravity="center"
        android:text="0￥"
        android:textColor="@color/color_red"
        android:textSize="14sp"/>

    <com.levent_j.client.common.views.FoodCountView
        android:id="@+id/view_cart_food_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_cart_food_name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_cart_food_name"
        android:layout_marginRight="20dp"/>

</RelativeLayout>