<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@color/color_text_white"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/tv_order_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="订单信息"
        android:textColor="@color/color_text_black"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/tv_order_info_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_order_info_title"
        android:layout_marginTop="10dp"
        android:text="订单号"
        android:textColor="@color/color_text_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_order_info_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_order_info_title"
        android:layout_marginTop="10dp"
        android:text="0000000000000000000"
        android:textColor="@color/color_text_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_order_info_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_order_info_id_title"
        android:layout_marginTop="10dp"
        android:text="时间"
        android:textColor="@color/color_text_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_order_info_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_order_info_id"
        android:layout_marginTop="10dp"
        android:text="xxxx-xx-xx"
        android:textColor="@color/color_text_black"
        android:textSize="14sp"/>

</RelativeLayout>